@model CityWeather
@{
    ViewData["Title"] = Model.CityName + "Weather";
}

@if (Model != null)
{
    <div class="box cursor-pointer w-30 margin-auto margin-top-200">
        <div class="flex-borderless">
            <div class="w-50">
                <h2>@Model.CityName</h2>
                <h4 class="text-dark-grey">@Model.DateAndTime.ToString("hh:mm tt")</h4>
            </div>
            <div class="w-50 border-left">
                <h1 class="margin-left">@Model.TemperatureFahrenheit <sup class="text-dark-grey">&#8457</sup></h1>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a href="/">Back to Weather Home Page</a>
    </div>
}
else
{
    <h3>City code is not valid.</h3>
}